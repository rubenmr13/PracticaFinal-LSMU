<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Basket.BasketFragment">

    <data>
        <variable
            name="viewModel"
            type = "com.example.fruitshop.basket.BasketViewModel"/>
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">

            <TextView
                android:id="@+id/basket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:text="@string/basket"
                android:textColor="@color/gey_2f3e46"
                android:textSize="28sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/apple_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spinner_fruit_shop"
                app:layout_constraintVertical_bias="1.0" />

            <View
                android:id="@+id/divider1"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="5dp"
                android:background="@color/gey_2f3e46"
                app:layout_constraintBottom_toTopOf="@+id/apple_image"
                app:layout_constraintTop_toBottomOf="@+id/basket"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/apple_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/seekBar"
                    app:srcCompat="@drawable/apple" />

                <TextView
                    android:id="@+id/apple_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/apple_text"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@+id/apple_image"
                    app:layout_constraintTop_toBottomOf="@+id/seekBar" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/pear_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/apple_image"
                    app:srcCompat="@drawable/pear" />

                <TextView
                    android:id="@+id/pear_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/pear_text"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@+id/pear_image"
                    app:layout_constraintTop_toBottomOf="@+id/apple_text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/orange_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/pear_image"
                    app:srcCompat="@drawable/orange" />

                <TextView
                    android:id="@+id/orange_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/orange_text"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@+id/orange_image"
                    app:layout_constraintTop_toBottomOf="@+id/pear_text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/plum_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/orange_image"
                    app:srcCompat="@drawable/plum" />

                <TextView
                    android:id="@+id/plum_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/plum_text"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@+id/plum_image"
                    app:layout_constraintTop_toBottomOf="@+id/orange_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/salmon_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/seekBar"
                    app:srcCompat="@drawable/salmon" />

                <TextView
                    android:id="@+id/salmon_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/salmon_text"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@+id/salmon_image"
                    app:layout_constraintTop_toBottomOf="@+id/seekBar" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/gilt_head_bream_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/salmon_image"
                    app:srcCompat="@drawable/dorada" />

                <TextView
                    android:id="@+id/gilt_head_bream_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/gilt_head_bream_text"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@+id/gilt_head_bream_image"
                    app:layout_constraintTop_toBottomOf="@+id/salmon_text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/sea_bass_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/gilt_head_bream_image"
                    app:srcCompat="@drawable/lubina" />

                <TextView
                    android:id="@+id/sea_bass_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/sea_bass_text"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@+id/sea_bass_image"
                    app:layout_constraintTop_toBottomOf="@+id/gilt_head_bream_text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/red_mullet_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/sea_bass_image"
                    app:srcCompat="@drawable/salmonete" />

                <TextView
                    android:id="@+id/red_mullet_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/red_mullet_text"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@+id/red_mullet_image"
                    app:layout_constraintTop_toBottomOf="@+id/sea_bass_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/cow_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/seekBar"
                    app:srcCompat="@drawable/cow" />

                <TextView
                    android:id="@+id/cow_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/cow_text"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@+id/cow_image"
                    app:layout_constraintTop_toBottomOf="@+id/seekBar" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/chicken_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/chicken_image"
                    app:srcCompat="@drawable/chicken" />

                <TextView
                    android:id="@+id/chicken_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/chicken_text"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@+id/chicken_image"
                    app:layout_constraintTop_toBottomOf="@+id/cow_text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/pig_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/chicken_image"
                    app:srcCompat="@drawable/pig" />

                <TextView
                    android:id="@+id/pig_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/pig_text"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@+id/pig_image"
                    app:layout_constraintTop_toBottomOf="@+id/chicken_text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/mince_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/mince_image"
                    app:srcCompat="@drawable/mince" />

                <TextView
                    android:id="@+id/mince_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/mince_text"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@+id/mince_image"
                    app:layout_constraintTop_toBottomOf="@+id/pig_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ball_soccer_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/seekBar"
                    app:srcCompat="@drawable/soccer" />

                <TextView
                    android:id="@+id/ball_soccer_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/ball_soccer_text"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@+id/ball_soccer_image"
                    app:layout_constraintTop_toBottomOf="@+id/seekBar" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ball_basket_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/ball_soccer_image"
                    app:srcCompat="@drawable/ball_basket" />

                <TextView
                    android:id="@+id/ball_basket_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/ball_basket_text"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@+id/ball_soccer_text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ball_tennis_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    app:srcCompat="@drawable/tennis" />

                <TextView
                    android:id="@+id/ball_tennis_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/ball_tennis_text"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ball_baseball_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    app:srcCompat="@drawable/baseball" />

                <TextView
                    android:id="@+id/ball_baseball_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/ball_baseball_text"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@+id/ball_baseball_image"/>
            </LinearLayout>

            <TextView
                android:id="@+id/total_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="@string/total" />

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="10dp"
                android:background="@color/gey_2f3e46"
                app:layout_constraintTop_toBottomOf="@+id/total"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="1dp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buy_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="40dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/green_08A045"
                    android:text="@string/buy_all"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/delete_basket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/red_cc0000"
                    android:text="@string/delete_basket"
                    tools:ignore="MissingConstraints" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</layout>
